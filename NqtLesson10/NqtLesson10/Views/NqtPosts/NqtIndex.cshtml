@model IEnumerable<NqtLesson10.Models.NqtPost>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NqtTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NqtImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NqtText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NqtStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
