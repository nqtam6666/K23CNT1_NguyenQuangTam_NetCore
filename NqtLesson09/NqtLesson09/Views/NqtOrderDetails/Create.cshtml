@model NqtLesson09.Models.NqtOrderDetail

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4>Create NqtOrderDetail</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-3">
                            <label asp-for="NqtOrderId" class="control-label"></label>
                            <select asp-for="NqtOrderId" class="form-select" asp-items="ViewBag.NqtOrderId">
                                <option value="">Select Order</option>
                            </select>
                            <span asp-validation-for="NqtOrderId" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="NqtBookId" class="control-label"></label>
                            <select asp-for="NqtBookId" class="form-select" asp-items="ViewBag.NqtBookId">
                                <option value="">Select Book</option>
                            </select>
                            <span asp-validation-for="NqtBookId" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="NqtQuantity" class="control-label"></label>
                            <input asp-for="NqtQuantity" class="form-control" type="number" min="1" />
                            <span asp-validation-for="NqtQuantity" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="NqtPrice" class="control-label"></label>
                            <input asp-for="NqtPrice" class="form-control" type="number" step="0.01" min="0" />
                            <span asp-validation-for="NqtPrice" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-4">
                            <input type="submit" value="Create" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}