@model IEnumerable<NguyenQuangTam_2310900093.Models.NqtEmployee>

@{
    ViewData["Title"] = "Quản lý nhân viên";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">Quản lý nhân viên</h1>
        <a asp-action="NqtCreate" class="btn btn-primary">
            <i class="fas fa-plus"></i> Thêm nhân viên mới
        </a>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="bg-light">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.NqtEmpName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NqtEmpLevel)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NqtEmpStartDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NqtEmpStatus)
                            </th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.NqtEmpName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NqtEmpLevel)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NqtEmpStartDate)
                            </td>
                            <td>
                                @if (item.NqtEmpStatus)
                                {
                                    <span class="badge bg-success">Show</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Hide</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="NqtEdit" asp-route-Nqtid="@item.NqtEmpId" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-edit"></i> Sửa
                                    </a>
                                    <a asp-action="NqtDetails" asp-route-Nqtid="@item.NqtEmpId" class="btn btn-sm btn-outline-info">
                                        <i class="fas fa-info-circle"></i> Chi tiết
                                    </a>
                                    <a asp-action="NqtDelete" asp-route-Nqtid="@item.NqtEmpId" class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-trash"></i> Xóa
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>