@model NqtLesson09.Models.NqtBook

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4>Create NqtBook</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-3">
                            <label asp-for="NqtBookId" class="control-label"></label>
                            <input asp-for="NqtBookId" class="form-control" readonly />
                            <span asp-validation-for="NqtBookId" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="NqtTitle" class="control-label"></label>
                            <input asp-for="NqtTitle" class="form-control" />
                            <span asp-validation-for="NqtTitle" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="NqtAuthor" class="control-label"></label>
                            <input asp-for="NqtAuthor" class="form-control" />
                            <span asp-validation-for="NqtAuthor" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="NqtRelease" class="control-label"></label>
                            <input asp-for="NqtRelease" class="form-control" type="date" />
                            <span asp-validation-for="NqtRelease" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="NqtPrice" class="control-label"></label>
                            <input asp-for="NqtPrice" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="NqtPrice" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="NqtDescription" class="control-label"></label>
                            <textarea asp-for="NqtDescription" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="NqtDescription" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="NqtPicture" class="control-label"></label>
                            <input asp-for="NqtPicture" class="form-control" type="file" accept="image/*" />
                            <span asp-validation-for="NqtPicture" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="NqtPublisherId" class="control-label"></label>
                            <select asp-for="NqtPublisherId" class="form-select" asp-items="ViewBag.NqtPublisherId">
                                <option value="">Select Publisher</option>
                            </select>
                            <span asp-validation-for="NqtPublisherId" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="NqtCategoryId" class="control-label"></label>
                            <select asp-for="NqtCategoryId" class="form-select" asp-items="ViewBag.NqtCategoryId">
                                <option value="">Select Category</option>
                            </select>
                            <span asp-validation-for="NqtCategoryId" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-4">
                            <input type="submit" value="Create" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}