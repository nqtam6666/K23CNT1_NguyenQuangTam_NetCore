@model NguyenQuangTam_2310900093.Models.NqtEmployee

@{
    ViewData["Title"] = "Xóa nhân viên";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Xác nhận xóa nhân viên</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        Bạn có chắc chắn muốn xóa nhân viên này? Hành động này không thể hoàn tác.
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="text-muted">Tên nhân viên</label>
                                <h5>@Html.DisplayFor(model => model.NqtEmpName)</h5>
                            </div>
                            <div class="mb-3">
                                <label class="text-muted">Cấp bậc</label>
                                <h5>
                                    @if (Model.NqtEmpLevel == "Admin")
                                    {
                                        <span class="badge bg-primary">@Model.NqtEmpLevel</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@Model.NqtEmpLevel</span>
                                    }
                                </h5>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="text-muted">Ngày bắt đầu</label>
                                <h5>@Html.DisplayFor(model => model.NqtEmpStartDate)</h5>
                            </div>
                            <div class="mb-3">
                                <label class="text-muted">Trạng thái</label>
                                <h5>
                                    @if (Model.NqtEmpStatus)
                                    {
                                        <span class="badge bg-success">Show</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Hide</span>
                                    }
                                </h5>
                            </div>
                        </div>
                    </div>

                    <form asp-action="NqtDelete" class="border-top pt-3">
                        <input type="hidden" asp-for="NqtEmpId" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="NqtIndex" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Xác nhận xóa
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
