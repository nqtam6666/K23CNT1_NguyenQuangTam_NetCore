                @Html.DisplayFor(modelItem => item.NqtTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NqtImage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NqtText)
            </td>
