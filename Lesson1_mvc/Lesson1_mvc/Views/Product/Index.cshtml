@model List<Lesson1_mvc.Models.NqtProduct>

@{
    ViewData["Title"] = "Quản lý sản phẩm";
}

<h2>Quản lý sản phẩm</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Created At</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Price.ToString("N0") đ</td>
                <td>@product.CreatedAt.ToString("dd-MM-yyyy")</td>
                <td><img src="@product.ImageUrl" alt="@product.Name" style="width: 50px; height: 50px;" /></td>
                <td>
                    <a href="#" class="btn btn-success btn-sm">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>