@model NqtLesson09.Models.NqtAccount

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4>Create NqtAccount</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-3">
                            <label asp-for="NqtAccountId" class="control-label"></label>
                            <input asp-for="NqtAccountId" class="form-control" />
                            <span asp-validation-for="NqtAccountId" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="NqtUsername" class="control-label"></label>
                            <input asp-for="NqtUsername" class="form-control" />
                            <span asp-validation-for="NqtUsername" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="NqtPassword" class="control-label"></label>
                            <input asp-for="NqtPassword" class="form-control" type="password" />
                            <span asp-validation-for="NqtPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="NqtFullName" class="control-label"></label>
                            <input asp-for="NqtFullName" class="form-control" />
                            <span asp-validation-for="NqtFullName" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="NqtPicture" class="control-label"></label>
                            <input asp-for="NqtPicture" class="form-control" type="file" />
                            <span asp-validation-for="NqtPicture" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="NqtEmail" class="control-label"></label>
                            <input asp-for="NqtEmail" class="form-control" type="email" />
                            <span asp-validation-for="NqtEmail" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="NqtAddress" class="control-label"></label>
                            <input asp-for="NqtAddress" class="form-control" />
                            <span asp-validation-for="NqtAddress" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="NqtPhone" class="control-label"></label>
                            <input asp-for="NqtPhone" class="form-control" type="tel" />
                            <span asp-validation-for="NqtPhone" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="NqtIsAdmin" class="control-label"></label>
                            <input asp-for="NqtIsAdmin" class="form-check-input" type="checkbox" />
                            <span asp-validation-for="NqtIsAdmin" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="NqtActive" class="control-label"></label>
                            <input asp-for="NqtActive" class="form-check-input" type="checkbox" />
                            <span asp-validation-for="NqtActive" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-4">
                            <input type="submit" value="Create" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}